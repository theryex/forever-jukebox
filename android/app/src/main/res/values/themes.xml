<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ForeverJukebox" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.ForeverJukebox.Splash" parent="Theme.ForeverJukebox" />

    <style name="Theme.ForeverJukebox.Fullscreen" parent="Theme.ForeverJukebox">
        <item name="android:windowAnimationStyle">@style/Animation_ForeverJukebox_Fullscreen</item>
    </style>

    <style name="Animation_ForeverJukebox_Fullscreen">
        <item name="android:activityOpenEnterAnimation">@anim/fj_fullscreen_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/fj_fullscreen_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/fj_fullscreen_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/fj_fullscreen_close_exit</item>
    </style>
</resources>
